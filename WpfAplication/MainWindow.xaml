<Window x:Class="WpfAplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAplication"
        mc:Ignorable="d"
        
        Title="AplikacjaProjektu" Height="800" Width="1400" HorizontalContentAlignment="Center" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF74B7B1">
        <Grid.RowDefinitions>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="498*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name ="StartButton" Content="Start" HorizontalAlignment="Center" Margin="478.2,125,42.6,0" VerticalAlignment="Top" Width="176" Height="57" Click="StartButton_Click" Background="#FF6EED2A" FontSize="20" FontWeight="Bold" Grid.Column="1"/>
        <Button Name ="StopButton" Content="Stop" HorizontalAlignment="Center" Margin="478.2,9.6,42.6,0" VerticalAlignment="Top" Width="176" Height="57" Click="StopButton_Click" Background="#FFEA4B38" FontSize="20" FontWeight="Bold" Grid.Column="1" Grid.Row="1"/>
        <DataGrid Name ="dataGrid" AutoGeneratingColumn="OnAutoGeneratingColumn" HorizontalAlignment="Left" Height="440" Margin="260,62.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="873" Grid.ColumnSpan="2" Background="White"/>
        <Button x:Name ="AddButton" Content="Add" Grid.Column ="0" HorizontalAlignment="Center" Margin="49,181,484.8,0" VerticalAlignment="Top" Width="163" Height="47" Click="AddButton_Click" Background="#FF1DC33D" FontSize="20" FontWeight="Bold" Grid.RowSpan="2"/>
        <Button x:Name ="RefreshButton" Content="Refresh" HorizontalAlignment="Center" Margin="49,139.6,484.8,0" VerticalAlignment="Top" Width="163" Height="47" Click="RefreshButton_Click" Background="#FF805DCD" FontSize="20" FontWeight="Bold" Grid.Row="1"/>
        <Button x:Name ="DeleteButton" Content="Delete" HorizontalAlignment="Center" Margin="49,62.6,484.8,0" VerticalAlignment="Top" Width="163" Height="46" Click="DeleteButton_Click" Background="#FFF7631D" FontSize="20" FontWeight="Bold" Grid.Row="1"/>
        <Label Content="* - wymagane" HorizontalAlignment="Left" Margin="49,148,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="163"/>
        <Label Name="label" Content="Usługa: " HorizontalAlignment="Left"  Margin="453.2,54,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="39" Width="220" FontWeight="Bold" FontSize="20" Foreground="Red" Grid.Column="1" Background="#FFCECECE" FontStyle="Italic"/>
        <Label Content="*Nazwa" HorizontalAlignment="Left" Margin="260,162,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="160"/>
        <Label Content="*Rozmiar (Bajty)" HorizontalAlignment="Left" Margin="442,162,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="109"/>
        <Label Content="Typ" HorizontalAlignment="Left" Margin="570,162,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="58"/>
        <Label Content="        Data Utworzenia&#xD;&#xA; (dd/MM/yyyy HH:mm:ss)" HorizontalAlignment="Left" Margin="644,148,0,0.4" HorizontalContentAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="154" Height="50"/>
        <TextBox Name ="NameBox" HorizontalAlignment="Left" Height="23" Margin="260,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"  TextAlignment="Center" Grid.RowSpan="2"  />
        <TextBox x:Name ="SizeBox" HorizontalAlignment="Left" Height="23" Margin="442,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109"  TextAlignment="Center" Grid.RowSpan="2" />
        <TextBox x:Name ="TypeBox" HorizontalAlignment="Left" Height="23" Margin="570,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="58"  TextAlignment="Center" Grid.RowSpan="2" />
        <TextBox x:Name ="DateBox" HorizontalAlignment="Left" Height="23" Margin="644,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"  TextAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <TextBox x:Name ="InfoBox" HorizontalAlignment="Left" Height="23" Margin="598,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"  TextAlignment="Center" Grid.ColumnSpan="2" BorderBrush="Black" Background="#FFCECECE" FontSize="14" Foreground="#FFFF0009" TextDecorations="{x:Null}" IsReadOnly="True" FontStyle="Italic" FontWeight="Bold" IsUndoEnabled="True"  />

    </Grid>
</Window>
